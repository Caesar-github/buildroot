From: Jeffy Chen <jeffy.chen@rock-chips.com>
Date: Fri, 22 Oct 2021 17:18:40 +0800
Subject: [PATCH 24/25] qwaylandwindow: Support setting window blocked state

Support setting window blocked state through app_id, for example:
app_id = "flags=blocked"

Signed-off-by: Jeffy Chen <jeffy.chen@rock-chips.com>
---
 src/client/qwaylandwindow.cpp | 31 +++++++++++++++++++++++++++++++
 src/client/qwaylandwindow_p.h |  3 +++
 2 files changed, 34 insertions(+)

diff --git a/src/client/qwaylandwindow.cpp b/src/client/qwaylandwindow.cpp
index 254138412..5d4916f77 100644
--- a/src/client/qwaylandwindow.cpp
+++ b/src/client/qwaylandwindow.cpp
@@ -464,6 +464,32 @@ void QWaylandWindow::setMask(const QRegion &mask)
     wl_surface::commit();
 }
 
+void QWaylandWindow::windowEvent(QEvent *event)
+{
+    switch (event->type()) {
+    case QEvent::WindowBlocked:
+        {
+            mBlocked = true;
+
+            /* Update blocked status */
+            setWindowFlags(window()->flags());
+        }
+        break;
+    case QEvent::WindowUnblocked:
+        {
+            mBlocked = false;
+
+            /* Update blocked status */
+            setWindowFlags(window()->flags());
+        }
+        break;
+    default:
+        break;
+    }
+
+    QPlatformWindow::windowEvent(event);
+}
+
 void QWaylandWindow::configure(uint32_t edges, int32_t width, int32_t height)
 {
     QMutexLocker resizeLocker(&mResizeLock);
@@ -766,6 +792,11 @@ void QWaylandWindow::setWindowFlags(Qt::WindowFlags flags)
         // HACK: Set window flags through app id
         char s[128] = "flags=";
 
+        if (mBlocked)
+            strcat(s, "blocked|");
+        else
+            strcat(s, "-blocked|");
+
 #define SET_FLAG(flag, str) \
         if (flags & (flag)) strcat(s, str "|"); \
         else strcat(s, "-" str "|");
diff --git a/src/client/qwaylandwindow_p.h b/src/client/qwaylandwindow_p.h
index 0c0bee619..9615b734f 100644
--- a/src/client/qwaylandwindow_p.h
+++ b/src/client/qwaylandwindow_p.h
@@ -159,6 +159,8 @@ public:
 
     void setMask(const QRegion &region) override;
 
+    void windowEvent(QEvent *event) override;
+
     int scale() const;
     qreal devicePixelRatio() const override;
 
@@ -270,6 +272,7 @@ private:
 
     void handleMouseEventWithDecoration(QWaylandInputDevice *inputDevice, const QWaylandPointerEvent &e);
 
+    bool mBlocked = false;
     bool mUpdateRequested;
     bool lastVisible = false;
 
